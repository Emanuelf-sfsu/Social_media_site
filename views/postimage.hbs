<form class="inputs" method="POST" enctype="multipart/form-data" id="post-img" action='/posts/createPost'>
    <div class="container  ">
        <span class="logo display-4 text-white">Upload</span>
        <div class="card  p-5">
            <div class="d-flex justify-content-center">
                <div class="preview-block border-right">
                    <div id="preview" class="upload-img">
                        <img id="output" width="400px" />
                    </div>
                </div>

                <div class="justify-content-center d-flex ">
                    <div class=" justify-content-end d-flex">
                        <div class="card-body w-75">
                            
                            <div class="form-group">
                                <label for="uploadImg">Please upload a photo</label>

                                <div class="overflow">
                                    <input type="file" accept="image/*" name="uploadImg" id="img-select"
                                        onchange="loadFile(event)" required>
                                </div>
                            </div>
                            
                            <div class="form-group">
                                <label for="title">Title</label>
                                <input type="text" class="form-control" id="post-title" placeholder="Title of post"
                                    name="title" required>
                            </div>
                            <div class="form-group">
                                <label for="Description">Description</label>
                                <textarea class="form-control" id="post-description" rows="3" name="description"
                                    placeholder="Tell us about your post!!!"></textarea>
                            </div>


                            
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" id="exampleCheck1">
                                <label class="form-check-label" for="tos">Except <a href="#"> Terms of Services</a> and
                                    <a href="#">Privacy Rules</a></label>
                            </div>


                            <div class="form-group mt-5">
                                <button class="btn btn-outline-primary w-100 " type="submit" >Post</button>
                            </div>
                        </div>
                    </div>


                </div>
            </div>


        </div>
</form>



<script>
    var loadFile = function (event) {
        var image = document.getElementById('output');
        image.src = URL.createObjectURL(event.target.files[0]);
    };
</script>

<style>
    .preview-block {
        width: 450px;
    }


    .overflow {
        width: 300px;
        overflow-x: hidden;
    }
</style>